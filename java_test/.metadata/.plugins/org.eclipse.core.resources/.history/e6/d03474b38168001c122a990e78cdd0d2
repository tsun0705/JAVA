package test02;

import java.util.Scanner;

public class Array2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("개수를 입력하세요.");
		int a = sc.nextInt();
		int[] arr = new int[a];
		
		for(int i=0; i<a; i++) {
			System.out.println("정수를 입력하세요");
			arr[i] = sc.nextInt();
		}
	}

}
